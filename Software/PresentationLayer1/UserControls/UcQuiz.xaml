<UserControl x:Class="PresentationLayer1.UserControls.UcQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="542.89" d:DesignWidth="891.858" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="DarkGray" TargetName="border"/>
                                <Setter Property="BorderBrush" Value="DimGray" TargetName="border"/>
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <TranslateTransform X="1" Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#b39cd0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="White"
            CornerRadius="15"
            Padding="15"
            Margin="0,20,0,20"
            Grid.Row="0">
            <TextBlock x:Name="txtQuestion"
                   Text="Question will appear here..."
                   FontSize="24"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Foreground="Black"/>
        </Border>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="10" Orientation="Horizontal">
            <TextBlock Text="Score:" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="5"/>
            <TextBlock x:Name="txtCorrectAnswers" Text="Correct: 0" FontSize="18" Foreground="Green" TextAlignment="Center"  Margin="5"/>
            <TextBlock x:Name="txtIncorrectAnswers" Text="Incorrect: 0" FontSize="18" Foreground="Red" TextAlignment="Center" Margin="5"/>
            <TextBlock x:Name="txtTotalScore" Text="Total Score: 0" FontSize="18" FontWeight="Bold" Foreground="Blue" TextAlignment="Center" Margin="5"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnAnswer1"
                Content="Answer 1"
                FontSize="18"
                Padding="10"
                Margin="10"
                Click="Answer_Click"
                Background="White"
                BorderBrush="White"
                Foreground="Black"
                Height="50"/>

            <Button x:Name="btnAnswer2"
                Content="Answer 2"
                FontSize="18"
                Padding="10"
                Margin="10"
                Grid.Row="1"
                Click="Answer_Click"
                Background="White"
                BorderBrush="White"
                Foreground="Black"
                Height="50"/>

            <Button x:Name="btnAnswer3"
                Content="Answer 3"
                FontSize="18"
                Padding="10"
                Margin="10"
                Grid.Row="2"
                Click="Answer_Click"
                Background="White"
                BorderBrush="White"
                Foreground="Black"
                Height="50"/>

            <Button x:Name="btnAnswer4"
                Content="Answer 4"
                FontSize="18"
                Padding="10"
                Margin="10"
                Grid.Row="3"
                Click="Answer_Click"
                Background="White"
                BorderBrush="White"
                Foreground="Black"
                Height="50"/>
        </Grid>

        <Button x:Name="btnCancel"
                Content="CANCEL"
                FontSize="18"
                Padding="10"
                Margin="10"
                Grid.Row="4"
                HorizontalAlignment="Center"
                BorderBrush="White"
                Foreground="Black"
                Height="50"
                Width="120"
                FontWeight="Bold"
                Click="btnCancel_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="MediumVioletRed"/>
                    <GradientStop Color="IndianRed" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
